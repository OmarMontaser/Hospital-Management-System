@using HospitalModels
@model HospitalViewModels.TimingViewModel


<form asp-action="Adding Time">

    <div class="form-group">
        <label asp-for="Doctor" class="control-label"></label>
        <input asp-for="Doctor" class="form-control" />
        <span asp-asp-validation-for="Doctor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Schedule" class="control-label"></label>
        <input asp-for="Schedule" class="form-control" />
        <span asp-asp-validation-for="Schedule" class="text-danger"></span>
    </div>

    <div class="form-floating">
        <select asp-for="status" asp-items="@Html.GetEnumSelectList<Status>()" class="control-label"></select>
        <input asp-for="status"  />
        <span asp-asp-validation-for="status" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="MorningShiftStartTime"></label>
        <select asp-for="MorningShiftStartTime" asp-items=@ViewBag.morningStart></select>
    </div>

    <div>
        <label asp-for="MorningShiftEndTime"></label>
        <select asp-for="MorningShiftEndTime" asp-items=@ViewBag.morningEnd></select>
    </div>


    <div>
        <label asp-for="AfternoonShiftStartTime"></label>
        <select asp-for="AfternoonShiftStartTime" asp-items=@ViewBag.evenStart></select>
    </div>

    <div>
        <label asp-for="AfternoonShiftEndTime"></label>
        <select asp-for="AfternoonShiftEndTime" asp-items=@ViewBag.evenEnd></select>
    </div>


    <input type="submit" value="submit"/>

</form>


